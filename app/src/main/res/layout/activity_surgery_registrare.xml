<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".SurgeryActivity">

    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:background="@drawable/roundbutton"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ID"
                    android:textAlignment="center"
                    android:textColor="@color/soonDark"
                    android:textSize="30dp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_gravity="center"
                    android:id="@+id/patient_idText_surgeryRegistrate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="45dp"
                    android:hint="ID"
                    android:textAlignment="center"
                    android:textColor="@color/soonDark"
                    android:textSize="30dp"
                    android:textStyle="bold" />
            </LinearLayout>

            <View
                android:layout_width="3dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_marginLeft="100dp"
                android:layout_marginRight="100dp"
                android:background="@color/soonDark"></View>

            <LinearLayout
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="이름"
                    android:textAlignment="center"
                    android:textColor="@color/soonDark"
                    android:textSize="30dp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/patient_nameText_surgeryRegistrate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:hint="name"
                    android:layout_gravity="center"
                    android:textAlignment="center"
                    android:textColor="@color/soonDark"
                    android:textSize="30dp"
                    android:textStyle="bold" />
            </LinearLayout>

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:background="@color/soonDark"></View>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="성별"
                    android:textAlignment="center"
                    android:textColor="@color/soonDark"
                    android:textSize="30dp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/patient_sexText_surgeryRegistrate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:hint="성별"
                    android:textAlignment="center"
                    android:textColor="@color/soonDark"
                    android:layout_gravity="center"
                    android:textSize="30dp"
                    android:textStyle="bold" />
            </LinearLayout>

            <View
                android:layout_width="3dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_marginLeft="100dp"
                android:layout_marginRight="100dp"
                android:background="@color/soonDark"></View>

            <LinearLayout
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="나이"
                    android:textAlignment="center"
                    android:textColor="@color/soonDark"
                    android:textSize="30dp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/patient_ageText_surgeryRegistrate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:hint="나이"
                    android:layout_gravity="center"
                    android:textAlignment="center"
                    android:textColor="@color/soonDark"
                    android:textSize="30dp"
                    android:textStyle="bold" />
            </LinearLayout>

        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_gravity="center"
        android:layout_marginTop="40dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="40dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="150dp"
                android:layout_height="30dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:text="담당의"
                android:textAlignment="center"
                android:textColor="@color/soonDark"
                android:textSize="20dp"
                android:textStyle="bold" />

            <Spinner
                android:id="@+id/op_surgery_DoctorSpinner"
                android:layout_width="280dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:layout_marginLeft="40dp"></Spinner>

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="150dp"
                android:layout_height="30dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:text="수술부위"
                android:textAlignment="center"
                android:textColor="@color/soonDark"
                android:textSize="20dp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/op_surgeryName"
                android:layout_width="280dp"
                android:layout_height="50dp"
                android:layout_marginLeft="40dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:hint="수술부위"
                android:textAlignment="center"
                android:textColor="@color/soonDark"
                android:textSize="20dp"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="150dp"
                android:layout_height="30dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:text="수술 전 증상"
                android:textAlignment="center"
                android:textColor="@color/soonDark"
                android:textSize="20dp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/op_Pre_sysmptom"
                android:layout_width="280dp"
                android:layout_height="50dp"
                android:layout_marginLeft="40dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:hint="수술 전 증상"
                android:textAlignment="center"
                android:textColor="@color/soonDark"
                android:textSize="20dp"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="150dp"
                android:layout_height="30dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:text="수술 후 증상"
                android:textAlignment="center"
                android:textColor="@color/soonDark"
                android:textSize="20dp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/op_Post_sysmptom"
                android:layout_width="280dp"
                android:layout_height="50dp"
                android:layout_marginLeft="40dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:hint="수술 후 증상"
                android:textAlignment="center"
                android:textColor="@color/soonDark"
                android:textSize="20dp"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="150dp"
                android:layout_height="30dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:text="의사 소견"
                android:textAlignment="center"
                android:textColor="@color/soonDark"
                android:textSize="20dp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/op_surgicalOpinion"
                android:layout_width="400dp"
                android:layout_height="50dp"
                android:layout_marginLeft="40dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:hint="의사 소견"
                android:textAlignment="center"
                android:textColor="@color/soonDark"
                android:textSize="20dp"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="150dp"
                android:layout_height="30dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:text="수술 날짜"
                android:textAlignment="center"
                android:textColor="@color/soonDark"
                android:textSize="20dp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/op_daySelectButton"
                android:layout_width="280dp"
                android:layout_height="50dp"
                android:layout_marginLeft="40dp"
                android:background="@drawable/roundbutton"
                android:text="날짜 선택"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textSize="18dp"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="150dp"
                android:layout_height="30dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:text="수술 시간"
                android:textAlignment="center"
                android:textColor="@color/soonDark"
                android:textSize="20dp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/op_timeSelectButton"
                android:layout_width="280dp"
                android:layout_height="50dp"
                android:layout_marginLeft="40dp"
                android:background="@drawable/roundbutton"
                android:text="시간 선택"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textSize="18dp"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="100dp">

            <Button
                android:id="@+id/op_saveButton"
                android:layout_width="140dp"
                android:layout_height="50dp"
                android:layout_marginRight="20dp"
                android:background="@drawable/roundbutton"
                android:text="저장"
                android:textColor="@color/white"
                android:textSize="18dp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/op_cancleButton"
                android:layout_width="140dp"
                android:layout_height="50dp"
                android:background="@drawable/roundbutton"
                android:text="취소"
                android:textColor="@color/white"
                android:textSize="18dp"
                android:textStyle="bold" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>